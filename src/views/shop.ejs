<!DOCTYPE html>
<html lang="es">
  <%- include ("partials/head.ejs") %>
  <body>

    <%- include ('partials/headerShop.ejs') %>
    
  <!-- FORMULARIO DEL COSTADO -->
  <section class="shop__aside--main container">
    <aside class="shop__aside">
      <form action="">
        <section class="shop__aside--parts">
          <h2 class="shop__aside--label">BUSCAR</h2>
          <input class="show__input input-buscar" type="text" name="buscar" id="buscar" placeholder="  item o categoría">
        </section>
        <section class="shop__aside--parts">
          <h2 class="shop__aside--label">ORDENAR POR</h2>
          <select name="ordenar" id="ordenar">
            <option value="mayor">Mayor a menor</option>
            <option value="menor">Menor a mayor</option>
            <option value="az">A-Z</option>
            <option value="za">Z-A</option>
          </select>
        </section>
        <section class="shop__aside--parts">
          <h2 class="shop__aside--label">PRECIO</h2>
          <article class="shop__aside--parts--precio--minymax">
            <label for="preciomin">MIN</label> <input class="show__input input-precio" type="text" name="preciomin" id="preciomin" placeholder="0">
            <label for="">-</label>
            <label for="preciomax">MAX</label> <input class="show__input input-precio" type="text" name="preciomax" id="preciomax" placeholder="0">
          </article>
        </section>
        <section class="shop__aside--parts">
          <h2 class="shop__aside--label">FILTRAR</h2>
          <article class="shop__aside--parts--precio--checkbox">
            <input class="show__input" type="checkbox" name="nuevos" id="nuevos"><label for="nuevos">NUEVOS</label>
            <input class="show__input" type="checkbox" name="ofertas" id="ofertas"><label for="ofertas">OFERTAS</label>
            <input class="show__input" type="checkbox" name="edicionespecial" id="edicionespecial"><label for="edicionespecial">EDICIÓN ESPECIAL</label>
            <input class="show__input" type="checkbox" name="favoritos" id="favoritos"><label for="favoritos">FAVORITOS</label>
          </article>
        </section>
      </form>
    </aside>

    <main class="shop__main">
      <section class="slider">
        <ul class="slider__items shop__grid">
          <% products.forEach((product)=> { %>
            <% if(product.licence_id === licences.licence_id) { %>
          <li class="slider__item">
            <article class="card-item">
              <a class="card-item__link" href="/shop/item/<%= product.product_id%> ">
                <picture  class="card-item__cover">
                  <span class="card-item__tag">Nuevo</span>
                  <img class="card-item__img--front" src="../../public/img<%= product.image_front %>" alt="<%= product.product_description %>">
                  <img class="card-item__img--back" src="../../public/img<%= product.image_back %>" alt="<%= product.product_description %>">
                </picture>
                <div class="card-item__content">
                  <p class="card-item__licence"><%= licences.licence_name %></p>
                  <h4 class="card-item__name"><%= product.product_name %></h4>
                  <p class="card-item__price"><%= product.price %></p>
                  <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                </div>
              </a>
            </article>
          </li>
          <% } %>
          <% }) %>
        </ul>
      </section>
      <section class="shop__main--pages">
        <ul class="shop__main--pages--items">
          <!-- FALTA AGREGAR LOS LINKS HACIA DONDE VA CADA PÁGINA Y FLECHA -->
          <li class="shop__main--pages--item shop__arrow"><iconify-icon icon="vaadin:chevron-left"></iconify-icon></li>
          <li class="shop__main--pages--item">1</li>
          <li class="shop__main--pages--item">2</li>
          <li class="shop__main--pages--item">...</li>
          <li class="shop__main--pages--item">9</li>
          <li class="shop__main--pages--item">10</li>
          <li class="shop__main--pages--item shop__arrow"><iconify-icon icon="vaadin:chevron-right"></iconify-icon></li>
        </ul>
      </section>
    </main>
  </section>
  <%- include ("partials/footerShop.ejs") %>

  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>
</html>