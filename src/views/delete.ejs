        <section class="categoria-licencia spacing-36">
          <label for="categoria">Categoría: </label>
          <select name="categoria" id="categoria" disabled>
            <option selected disabled><%= product.category_name %></option>
            <% allCategories.forEach((category)=>{ %>
            <option><%= category.category_name %></option>
            <% }) %>
          </select>
          <label for="licencia">Licencia: </label>
          <select name="licencia" id="licencia" disabled>
            <option selected disabled><%= product.licence_name %></option>
            <% allLicences.forEach((licence)=>{ %>
            <option><%= licence.licence_name %></option>
            <% }) %>
          </select>
        </section>
        <div class="datos-form">
          <section class="spacing-36">
            <label for="nombre_producto">Nombre del producto: </label>
            <input
              type="text"
              name="nombre_producto"
              id="nombre_producto"
              value="<%= product.product_name %>" disabled
            />
          </section>
          <section class="spacing-36">
            <textarea
              name="detalle_producto"
              id="detalle_producto"
              cols="30"
              rows="10"
           disabled>
<%= product.product_description %></textarea
            >
          </section>
          <section class="sector-sku-descuento margin-sku">
            <label for="sku">SKU: </label>
            <input
              type="text"
              name="sku"
              id="sku"
              size="12"
              value="<%= product.sku %>" disabled
            />
            <label for="precio">Precio: </label>
            <input
              type="text"
              name="precio"
              id="precio"
              size="12"
              value="$<%= product.price %>" disabled
            />
            <label for="stock">Stock: </label>
            <input
              class="center"
              type="text"
              name="stock"
              id="stock"
              size="5"
              value="<%= product.stock %>" disabled
            />
          </section>
          <section class="sector-sku-descuento margin-descuento">
            <label for="descuento">Descuento: </label>
            <input
              class="center"
              type="text"
              name="descuento"
              id="descuento"
              size="5"
              value="<%= product.dues %>%" disabled
            />
            <label for="cuotas">Cuotas: </label>
            <select name="cuotas" id="cuotas" disabled>
