<!DOCTYPE html>
<html lang="es">

<%- include ("partials/head.ejs") %>
<body>

  <!-- BARRA DE MENÚ -->
  <%- include ('partials/headerShop.ejs') %>

  <!-- HERO O BANNER -->
  <section class="hero">
    <article class="hero__content container">
      <h2 class="hero__title">Nuevos Ingresos</h2>
      <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
      <a  class="hero__link" href="/shop">SHOP</a>
    </article>
  </section>
  
  <main class="main-container">

    <!-- SECCIÓN DE COLECCIONES -->
    <section class="collection container">
      <!-- primera imágen baby-yoda -->
      <article class="collection__content">
        <h2 class="collection__title">Star Wars & The Mandalorian</h2>
        <p class="collection__text">Disfruta de una saga que sigue agregando personajes a su colección.</p>
        <a class="collection__link" href="/shop">VER COLECCIÓN</a>
      </article>
      <picture class="collection__cover">
        <img src="/img/star-wars/baby-yoda-1.webp"
          alt="Figura coleccionable Funko de Grogu de la serie The Mandalorian">
      </picture>
    </section>
    <section class="collection container">
      <!-- segunda imágen vulpix -->
      <article class="collection__content">
        <h2 class="collection__title">POKEMON INDIGO</h2>
        <p class="collection__text">Atrapa todos los que puedas y disfruta de una colección llena de amigos.</p>
        <a class="collection__link" href="/shop">VER COLECCIÓN</a>
      </article>
      <picture class="collection__cover">
        <img src="/img/pokemon/vulpix-1.webp" alt="Figura coleccionable Funko de Vulpix de la serie Pokemon">
      </picture>
    </section>

    <section class="collection container">
      <!-- tercera imágen snape-patronus -->
      <article class="collection__content">
        <h2 class="collection__title">HARRY POTTER</h2>
        <p class="collection__text">Revive los recuerdos de una saga llena de magia y encanto.</p>
        <a class="collection__link" href="/shop">VER COLECCIÓN</a>
      </article>
      <picture class="collection__cover">
        <img src="/img/harry-potter/snape-patronus-1.webp"
          alt="Figura coleccionable Funko del Patronus de Snape en la película de Harry Potter">
      </picture>
    </section>

    <!-- Carrousel -->
    <section class="slider container glide">
      <h2 class="slider__title">ÚLTIMOS LANZAMIENTOS</h2>
      <div class="glide__track" data-glide-el="track">
        <ul class="slider__items glide__slides">
          <% products.forEach((product)=> { %>
          <li class="slider__item glide__slide">
            <article class="card-item">
              <a class="card-item__link" href="/shop">
                <picture class="card-item__cover">
                  <span class="card-item__tag">Nuevo</span>
                  <img class="card-item__img--front" src="<%= product.img_front %>" alt="<%= product.product_description %>">
                  <img class="card-item__img--back" src="<%= product.img_back %>" alt="<%= product.product_description %>">
                </picture>
                <div class="card-item__content">
                  <p class="card-item__licence"><%= product.licence_name %></p>
                  <h4 class="card-item__name"><%= product.product_name %></h4>
                  <p class="card-item__price"><%= product.product_price %></p>
                  <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                </div>
              </a>
            </article>
          </li>
          <% }) %>
        </ul>
      </div>
      <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon icon="material-symbols:chevron-left"></iconify-icon></button>
        <End class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon icon="material-symbols:chevron-right"></iconify-icon></button>
      </div>
    </section>

  </main>

  <%- include ("partials/footerShop.ejs") %>

  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
  <script src="/js/glide.js"></script>
</body>

</html>