    <main class="container ancho-admin">
      <section class="admin__buscador">
        <button>
          <img src="/img/icons/search_icon.png" alt="Imagen lupita" />
        </button>
        <input
          type="text"
          name="buscador"
          id="buscador"
          placeholder="código, nombre o categoría"
        />
      </section>
      <section class="admin__title-add">
        <h1 class="admin-title">LISTADO DE PRODUCTOS</h1>
        <div class="admin__title-add__add">
          <p>AGREGAR</p>
          <a href="/admin/create"
            ><img
              src="/img/icons/add.png"
              alt="ícono para agregar el producto a la lista"
          /></a>
        </div>
      </section>
      <section>
        <table class="admin__table">
          <thead class="admin__table__head">
            <tr>
              <th>ID</th>
              <th>Código</th>
              <th>Nombre del Producto</th>
              <th>Categoría</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach((product)=> { %>
            <tr>
              <td><%= product.product_id %></td>
              <td><%= product.sku %></td>
              <td><%= product.product_name %></td>
              <td><%= product.licence_name %></td>
              <td>
                <a href="/admin/edit/<%= product.product_id %>"
                  ><img
                    class="button__edit"
                    src="/img/icons/edit_pencil.svg"
                    alt="Editar"
                /></a>
              </td>
              <td>
                <!-- VER EL HREF QUE TIENE 2 // -->
                <a href="/admin/delete/<%= product.product_id %>"
                  ><img src="/img/icons/delete_trash.svg" alt="Eliminar"
                /></a>
              </td>
              <% }) %>
            </tr>
