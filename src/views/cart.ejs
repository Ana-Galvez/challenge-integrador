<!DOCTYPE html>
<html lang="es">
<%- include ("partials/head.ejs") %>
<body>
  <header>
    <nav class="navbar container">
      <picture class="navbar__logo">
        <a href="/home">
          <img src="/img/branding/logo_light_horizontal.svg" alt="Isologotipo de la Marca Funkoshop" />
        </a>
      </picture>
      <ul class="navbar__menu">
        <li class="navbar__item with-submenu"><a class="navbar__link with-icon" href="/shop">SHOP<iconify-icon icon="mdi:chevron-down"></iconify-icon></a>
          <ul class="submenu">
            <li class="submenu__item"><a href="#" class="submenu__link">Funkos</a></li>
            <li class="submenu__item"><a href="#" class="submenu__link">Remeras</a></li>
            <li class="submenu__item"><a href="#" class="submenu__link">Llaveros</a></li>
          </ul>
        </li>
        <li class="navbar__item"><a class="navbar__link" href="/contact">CONTACTO</a></li>
        <li class="navbar__item"><a class="navbar__link" href="/auth/login">LOGIN</a></li>
        <div id="carrito_contador">
          <li class="navbar__item"><a class="navbar__cart" href="/shop/cart"><img src="/img/icons/cart-icon.svg" alt="icono de carrito"></a></li>
          <!-- Contador redondo rojo de productos en el header -->
          <div class="count-products">
            <span id="contador-productos">0</span>
          </div>
        </div>
      </ul>
    </nav>
  </header>

  <main class="cart__main container">
    <h1 class="cart__title">CARRITO DE COMPRAS</h1>
    <section class="cart__table">
      <div class="cart__table__head border-backcolor-header">
          <h2 class="cart__table__head--title">DETALLE DE PRODUCTO</th>
          <h2 class="cart__table__head--title--cant">CANTIDAD</th>
          <h2 class="cart__table__head--title--total">TOTAL</th>
      </div>
      
      <section class="cart__table__body">
        
           <section class="cart__table__td-image spacing-36" id="cart_div_cada_producto">
            <div class="cart__table__td-container">
              <picture>
                <img src="/img/star-wars/baby-yoda-1.webp" alt="Figura coleccionable Funko de Grogu de la serie The Mandalorian">
              </picture>
              <div class="cart__table__td-image-description">
                <p class="cart__table__td-image-description-name">BABY YODA BLUEBALL</p>
                <p class="cart__table__td-image-description-licence">STAR WARS</p>
                <p class="cart__table__td-image-description-price">precio unitario: $ <span id="cart_precio_unitario">1799.99</span></p>
              </div>
            </div>

            <div class="cart__table__td-number">
              <input type="text" name="cantidad" id="cart_cantidad" placeholder="0" value="1" disabled>
              <div class="btn-cant">
                <button class="cart__quantity" id="cart_add" type="button">+</button>
                <button class="cart__quantity" id="cart_subtract" type="button">-</button>
              </div>
            </div>
            <div class="cart__table__td-totalprice">$ <span id="cart_precio_total_producto">3599.98</span></div>
            <div class="cart__table__td-delete"><iconify-icon id="cart_eliminar" icon="typcn:delete-outline" style="color: #f24e1e;" width="26" height="26"></iconify-icon></div>
          </section>
      </section>
    </section>

    <section class="cart__resumen">
      <h2 class="cart__resumen__title">RESUMEN</h2>
      <table class="cart__resumen__table border-backcolor-header">
        <tbody class="cart__resumen__body">
          <tr>
            <td class="cart__resumen__table__title">CANTIDAD DE ELEMENTOS</td>
            <td class="cart__resumen__table__number" id="cart_cant_elementos"></td>
          </tr>
          <tr>
            <td class="cart__resumen__table__title">SUBTOTAL</td>
            <td class="cart__resumen__table__number">$ <span id="cart_subtotal"></span></td>
          </tr>
          <tr>
            <td class="cart__resumen__table__title">ENVIO</td>
            <td class="cart__resumen__table__number">$ <span id="cart_envio"></span>0.00</td>
          </tr>
          <tr>
            <td class="cart__resumen__table__title-total">TOTAL</td>
            <td class="cart__resumen__table__number-total">$ <span id="cart_precio_total"></span></td>
          </tr>
        </tbody>
      </table>
      
      <button class="pagar"><a href="">IR A PAGAR</a></button>
    </section>
  </main>
  <%- include ("partials/footerShop.ejs") %>
  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
  <script src="/js/cart.js" type="module"></script>
</body>
</html>